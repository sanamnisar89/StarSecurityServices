@model ProfileVM

@{
    ViewData["Title"] = "Profile";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h4>Your Profile</h4>
        </div>
        <div class="card-body">
            <form>
                <div class="form-group">
                    <label for="Name">Name</label>
                    <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" readonly />
                </div>

                <!-- Role Dropdown -->
                <div class="form-group">
                    <label for="Role">Role</label>
                    @Html.DropDownListFor(m => m.Role,
                                 new SelectList(new List<string> { "Admin", "Developer", "Manager", "HR" }, Model.Role),
                                 "Select Role",
                                 new { @class = "form-control", id = "Role" })
                </div>

                <!-- Address -->
                <div class="form-group">
                    <label for="Address">Address</label>
                    <input type="text" class="form-control" id="Address" name="Address" value="@Model.Address" readonly />
                </div>

                <!-- Contact Number -->
                <div class="form-group">
                    <label for="ContactNo">Contact Number</label>
                    <input type="text" class="form-control" id="ContactNo" name="ContactNo" value="@Model.ContactNo" readonly />
                </div>

                <!-- Education Qualification -->
                <div class="form-group">
                    <label for="EducationQualification">Education Qualification</label>
                    <input type="text" class="form-control" id="EducationQualification" name="EducationQualification" value="@Model.EducationQualification" readonly />
                </div>

                <!-- Employee Code -->
                <div class="form-group">
                    <label for="EmployeeCode">Employee Code</label>
                    <input type="text" class="form-control" id="EmployeeCode" name="EmployeeCode" value="@Model.EmployeeCode" readonly />
                </div>

                <!-- Department Dropdown -->
                <div class="form-group">
                    <label for="Department">Department</label>
                    @Html.DropDownListFor(m => m.Department,
                                 new SelectList(new List<string> { "IT", "HR", "Sales", "Finance" }, Model.Department),
                                 "Select Department",
                                 new { @class = "form-control", id = "Department" })
                </div>

                <!-- Grade -->
                <div class="form-group">
                    <label for="Grade">Grade</label>
                    <input type="text" class="form-control" id="Grade" name="Grade" value="@Model.Grade" readonly />
                </div>

                <!-- Clients -->
                <div class="form-group">
                    <label for="Client">Clients</label>
                    @if (Model.Client != null && Model.Client.Any())
                    {
                            <ul>
                            @foreach (var client in Model.Client)
                            {
                                        <li>@client</li>
                            }
                            </ul>
                    }
                    else
                    {
                            <p>No clients available.</p>
                    }
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Add Bootstrap 4 for card layout and styling -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
