@{
}
@model IEnumerable<CareerVM>

<section class="service_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>
                Career
            </h2>
        </div>
        <div class="row">
            @foreach (var career in Model)
            {
                <div class="col-md-4">
                    <div class="box">
                        <div class="detail-box">
                            <h6>
                                @career.JobTitle  <!-- Displaying the Job Title -->
                            </h6>
                            <p>
                                @career.JobDescription  <!-- Displaying the Job Description -->
                            </p>
                            <a href="/career/details/@career.Id">
                                Read More
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
      </div>
</section>

<!-- end service section -->
